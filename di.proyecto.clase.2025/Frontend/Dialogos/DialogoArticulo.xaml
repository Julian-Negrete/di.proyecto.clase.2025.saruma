<mah:MetroWindow
    x:Class="di.proyecto.clase._2025.Frontend.Dialogos.DialogoArticulo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend.Dialogos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DialogoArticulo"
    Width="800"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <Grid Grid.ColumnSpan="2" Background="Purple">
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="AÑADIR ARTÍCULO" />
        </Grid>

        <TextBlock
            Grid.Row="1"
            FontSize="15"
            FontWeight="Bold"
            Text="Los campos en negrita son obligatorios" />

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.ColumnSpan="2"
                Margin="20,10,0,0"
                FontSize="20"
                FontWeight="Bold"
                Text="Características de Artículo: " />

            <TextBlock
                Grid.Row="1"
                Margin="20,10,0,0"
                FontSize="15"
                Text="Número de serie: " />
            <TextBox
                x:Name="txtNumSerie"
                Grid.Row="2"
                Margin="20,0,10,0"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding articulo.Numserie}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="20,10,0,0"
                FontSize="15"
                Text="Estado: " />
            <TextBox
                x:Name="txtEstado"
                Grid.Row="2"
                Grid.Column="1"
                Margin="20,0,10,0"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding articulo.Estado}" />

            <TextBlock
                Grid.Row="3"
                Margin="20,10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="Modelo: " />
            <ComboBox
                x:Name="cmbModelo"
                Grid.Row="4"
                Margin="20,0,10,0"
                DisplayMemberPath="Nombre"
                ItemsSource="{Binding listaModelos}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Margin="20,10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="Fecha de alta: " />
            <DatePicker
                x:Name="dpFechaAlta"
                Grid.Row="4"
                Grid.Column="1"
                Margin="20,0,10,0"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
        </Grid>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="20,10,0,0"
                FontSize="20"
                FontWeight="Bold"
                Text="Datos adicionales del artículo: " />

            <TextBlock
                Grid.Row="1"
                Margin="20,10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="Observaciones: " />
            <TextBox
                x:Name="txtObservaciones"
                Grid.Row="2"
                Grid.RowSpan="5"
                Margin="20,10,0,0"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding articulo.Observaciones}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="20,10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="Usuario*: " />
            <ComboBox
                x:Name="cmbUsuario"
                Grid.Row="2"
                Grid.Column="1"
                Margin="20,10,0,0"
                mat:HintAssist.Hint="Selecciona un usuario"
                DisplayMemberPath="Nombre"
                ItemsSource="{Binding listaUsuarios}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Margin="20,10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="Departamento: " />
            <ComboBox
                x:Name="cmbDepartamento"
                Grid.Row="4"
                Grid.Column="1"
                Margin="20,10,0,0"
                mat:HintAssist.Hint="Selecciona un departamento"
                DisplayMemberPath="Nombre"
                ItemsSource="{Binding listaDepartamentos}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Margin="20,10,0,0"
                FontSize="15"
                FontWeight="Bold"
                Text="Espacio*: " />
            <ComboBox
                x:Name="cmbEspacio"
                Grid.Row="6"
                Grid.Column="1"
                Margin="20,10,0,0"
                mat:HintAssist.Hint="Selecciona un espacio"
                DisplayMemberPath="Nombre"
                ItemsSource="{Binding listaEspacios}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />


        </Grid>

        <Button
            x:Name="btnCancelarArticulo"
            Grid.Row="4"
            Grid.Column="1"
            Margin="420,0,220,0"
            Background="White"
            Content="CANCELAR"
            Foreground="#2B2A4C"
            Style="{StaticResource MaterialDesignRaisedButton}" />

        <Button
            x:Name="btnGuardarArticulo"
            Grid.Row="4"
            Grid.Column="1"
            Margin="620,0,10,0"
            Background="Indigo"
            Content="GUARDAR"
            Foreground="White"
            Style="{StaticResource MaterialDesignRaisedButton}" />

    </Grid>
</mah:MetroWindow>
