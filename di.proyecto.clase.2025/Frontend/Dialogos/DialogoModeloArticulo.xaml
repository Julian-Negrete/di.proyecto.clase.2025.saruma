<mah:MetroWindow
    x:Class="di.proyecto.clase._2025.Frontend.Dialogos.DialogoModeloArticulo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend.Dialogos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="diagModeloArticulo"
    Title="DialogoModeloArticulo"
    Width="800"
    Height="450"
    Loaded="diagModeloArticulo_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!--  Poner como inputs los campos que tiene ModeloArticulo  -->
        <!--  usar metro window y mismo formato que la principal  -->
        <Grid Grid.ColumnSpan="2" Background="Purple">
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                FontSize="25"
                Foreground="White"
                Text="AÑADIR MODELO ARTÍCULO" />
        </Grid>

        <TextBlock
            Grid.Row="1"
            FontSize="15"
            FontWeight="Bold"
            Text="Los campos en negrita son obligatorios" />

        <TextBlock
            Grid.Row="2"
            Margin="20,10,0,0"
            FontSize="15"
            FontWeight="Bold"
            Text="Nombre: " />
        <TextBox
            x:Name="txtNombre"
            Grid.Row="3"
            Margin="20,0,10,0"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding modeloArticulo.Nombre}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="20,10,0,0"
            FontSize="15"
            FontWeight="Bold"
            Text="Marca: " />
        <TextBox
            x:Name="txtMarca"
            Grid.Row="3"
            Grid.Column="1"
            Margin="20,0,10,0"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding modeloArticulo.Marca}" />

        <TextBlock
            Grid.Row="4"
            Margin="20,10,0,0"
            FontSize="15"
            FontWeight="Bold"
            Text="Modelo: " />
        <TextBox
            x:Name="txtModelo"
            Grid.Row="5"
            Margin="20,0,10,0"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding modeloArticulo.Modelo}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="20,10,0,0"
            FontSize="15"
            FontWeight="Bold"
            Text="Tipo de artículo: " />
        <ComboBox
            x:Name="cmbTipoArticulo"
            Grid.Row="5"
            Grid.Column="1"
            Margin="20,0,10,0"
            DisplayMemberPath="Nombre"
            ItemsSource="{Binding listaTiposArticulos}"
            SelectedItem="{Binding modeloarticulo.TipoNavigation}"
            Style="{StaticResource MaterialDesignOutlinedComboBox}"
            Text="{Binding modeloArticulo.TipoNavigation}">
            <!-- Aquí se pueden añadir los tipos de artículo como ComboBoxItems o enlazar a una colección
            <ComboBoxItem Content="Tipo 1"/>
            <ComboBoxItem Content="Tipo 2"/>
            <ComboBoxItem Content="Tipo 3"/>-->
        </ComboBox>

        <TextBlock
            Grid.Row="6"
            Margin="20,10,0,0"
            FontSize="15"
            FontWeight="Bold"
            Text="Descripción: " />
        <TextBox
            x:Name="txtDescripcion"
            Grid.Row="7"
            Grid.ColumnSpan="2"
            Margin="20,0,10,0"
            AcceptsReturn="True"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding modeloArticulo.Descripcion}" />

        <Button
            x:Name="btnCancelarModeloArticulo"
            Grid.Row="8"
            Grid.Column="1"
            Margin="50,0,220,0"
            Background="White"
            Click="btnCancelarModeloArticulo_Click"
            Content="CANCELAR"
            Foreground="#2B2A4C"
            Style="{StaticResource MaterialDesignRaisedButton}" />

        <Button
            x:Name="btnGuardarModeloArticulo"
            Grid.Row="8"
            Grid.Column="1"
            Margin="260,0,10,0"
            Background="Indigo"
            Click="btnGuardarModeloArticulo_Click"
            Content="GUARDAR"
            Foreground="White"
            Style="{StaticResource MaterialDesignRaisedButton}" />

    </Grid>
</mah:MetroWindow>
